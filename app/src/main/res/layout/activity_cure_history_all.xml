<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/g_TL_CureHistory">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/cha_Title"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="История покупок пилюлек"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/cha_Filter_Label"
                    android:layout_height="match_parent"
                    android:layout_width="50dp"
                    android:layout_weight="0.04"
                    android:layout_marginLeft="10dp"
                    android:text="За месяц:"
                    android:textStyle="italic"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/cha_Filter"
                    android:layout_height="match_parent"
                    android:layout_width="50dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.04"
                    android:text="01.10.2017"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </TableRow>
        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gvCureHistoryAll">
        </GridView>
    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="25px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/cha_delCure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.04"
            android:text="-" />

        <Button
            android:id="@+id/cha_EditCure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Edit" />
    </TableRow>
</LinearLayout>
